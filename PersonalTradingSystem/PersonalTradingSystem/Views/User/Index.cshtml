@using Common.ViewModels 
@{
    ViewBag.Title = "User Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div style="background-image: url('images/Investment-trends.png');background-size:cover; background-position:bottom; background-repeat:no-repeat; width:100%; height:90vh">
    <div class="d-flex align-items-center justify-content-center" style="width:100%; height:100%; background:rgba(0,0,0,0.3)">
        <div class="d-flex flex-column p-5">
            <h2 class=" display-1 text-info" style="font-weight: 600; text-shadow: 1px 1px 2px white;">Start Investing With US</h2>
            <div class="d-flex justify-content-center">
                @Html.ActionLink("START A NEW FUND", "AddFunds", "User", null, new { @class = "p-3 btn  btn-success me-3", @style = "width: 300px; font-weight:800" })
                @Html.ActionLink("START A NEW INVESTMENT", "AddInvestment", "User", null, new { @class = "p-3 btn  btn-outline-light ", @style = "width: 300px; font-weight:800" })
            </div>
        </div>
    </div>  
</div>



 