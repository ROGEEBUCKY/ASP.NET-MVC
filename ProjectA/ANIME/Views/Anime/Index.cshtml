@using Common;
@model List<AnimeDto>

@{
    ViewBag.Title = "Anime";
    var list = Model;
    var count = 0;
}
<h2>AnimeList</h2>

<div class="d-flex align-item-center flex-wrap">
    <div class="p-3"><a href="@Url.Action("GetAnimeByName","Anime",new { @name = "All"})" id="All" class="filter active">All</a></div>

    @for (char x = 'A'; x <= 'Z'; x++)
        {
        <div class="p-3"><a href="@Url.Action("GetAnimeByName","Anime",new { @name = @x})" id="@x" class="filter">@x</a></div>
        }
    <hr /><br />
</div>
<div class="border-1 d-flex flex-column">
    @foreach (var anime in list)
        {
        count++;
        <div class="d-flex align-item-center">
            <p>@count</p>
            <p class="w-20" style="width: 100px; height:100px"><img src="@anime.ThumbNail" style="width:100%; height:100%"/></p>
            <p><a href="">@anime.Title</a></p>
        </div>
        }
</div>



