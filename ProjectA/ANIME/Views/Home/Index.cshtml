@{
    ViewBag.Title = "Home Page";
    var list = ViewBag.AnimeList;
    ViewBag.list = ViewBag.AnimeList;
    int count = 0;
}
<div class="d-flex">
    <div id="carouselExampleControls" class="carousel slide m-4" style="height: 80vh; width: 25vw" data-bs-ride="carousel">
        <div class="carousel-inner h-100">

            @foreach (var item in list)
                {
                if (count == 0)
                    {
                    <div class="carousel-item h-100 active">
                        <img src="@item.Picture" class="d-block w-100 h-100" alt="@item.Title">
                    </div>
                    }
                else
                    {
                    <div class="carousel-item h-100">
                        <img src="@item.Picture" class="d-block h-100 w-100" alt="@item.Title">
                    </div>
                    }
                count += 1;
                }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    @Html.Partial("_AnimeList")
</div>
