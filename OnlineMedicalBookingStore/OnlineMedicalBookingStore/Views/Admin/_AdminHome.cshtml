@model Common.ViewModels.AdminHomeVM
<div class="d-flex justify-content-between align-items-center px-5">
    <div>
        <h2>Welcome Admin</h2>
        <p class="text-muted">All Systems are running Smoothly!</p>
    </div>
    <div>
        Today(@DateTime.Now.ToShortDateString())
    </div>
</div>
<hr />
<div class="d-flex justify-content-center">
    <div class="row my-5 justify-content-center">
        <div class="col-md-6 rounded-3">
            <img src="~/Images/people.svg" class="w-100 h-100" />
        </div>
        <div class="col-md-6 row text-light justify-content-center">
            <div class="col-md-5 rounded-3 m-1 p-2" style="background-color:rgb(150,179,250)">
                <h5 class="">Total Users</h5>
                <hr />
                <p class=" fs-3">@Model.ListOfCustomers</p>
            </div>
            <div class="col-md-5 rounded-3 m-1 p-2" style="background-color:rgb(70,70,161)">
                <h5 class="">Total Products</h5>
                <hr />

                <p class=" fs-3">@Model.TotalProducts</p>
            </div>
            <div class="col-md-5 rounded-3 m-1 p-2" style="background-color:rgb(120,120,232)">
                <h5 class="">Total Orders</h5>
                <hr />

                <p class=" fs-3">@Model.TotalOrdersCompleted</p>
            </div>
            <div class="col-md-5 rounded-3 m-1 p-2" style="background-color:rgb(243,121,126)">
                <h5 class="">Total Sales</h5>
                <hr />
                <p class=" fs-3">&#8377; @Model.TotalSales</p>
            </div>

        </div>
    </div>
</div>