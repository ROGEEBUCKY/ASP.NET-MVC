@using Common.ViewModels
@{
    Layout = null;
    List<ProductVM> list = ViewBag.products;
    UserVM user = Session["User"] as UserVM;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet">
    <link href="~/Content/Home/Index.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md fixed-top navbar-light bg-dark p-3">
        <div class="container">
            <a class="navbar-brand text-light">Online Medicine</a>
            <form class="d-flex w-50">
                <input class="form-control me-2" type="search" placeholder="Search for Products" aria-label="Search">
            </form>
            <div class="d-flex">
                @Html.ActionLink("Products", "AllProducts", "User", null, new { @class = "btn  text-light" })
                @Html.ActionLink("Cart", "Cart", "User", null,new { @class = "btn  text-light", @id = "cart" })
                @Html.ActionLink("Login/Register", "Cart", "User", null,new { @class = "btn btn-outline-light", @id = "cart" })
                
            </div>
        </div>
    </nav>

    <div id="renderarea" class="row align-items-center justify-content-center flex-wrap pt-5">
        <div class="container-fluid" id="hero">
            <div id="overlay" class="d-flex align-items-center justify-content-center">
                <div class="text-light text-center">
                    <h2 class="fs-1 mb-3">Get All Your Medicine in One Place</h2>
                    @Html.ActionLink("Show All Products ", "AllProducts", "User", null, new { @class = "btn btn-outline-light" })
                </div>
            </div>
        </div>

        <div class="mt-3">
            <div class="container text-center h3">Featured Products</div>
            <div class="container ">
                <div class="row d-flex justify-content-center ">
                    @foreach (var products in list)
                        {
                        <div class="col-12 col-md-3 m-3">
                            <div class="card border-light mb-4 animate-up-5">
                                    <img src="@products.Image" class="card-img-top border  p-2 rounded-xl" width="200" height="300" alt="@products.Name">
                                <div class="card-body">
                                        <h4 class="h5 card-title">@products.Name</h4>
                                    <ul class="card-text text-muted">
                                        <li>Original Price: @products.Price</li>
                                        <li>Discount: @products.Discount %</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-soft border-top">
                                    <div class="d-flex justify-content-between">
                                        <div class="col pl-0 text-success">
                                            <span class="text-muted font-small d-block mb-2">Final Price</span>
                                            <span class="h5 fs-4 font-weight-bold"> &#8377; @products.FinalAmount</span>

                                        </div>
                                        <div class="col">
                                            <span class="text-muted font-small d-block mb-2">Remark</span>
                                            <span class="h5 text-dark font-weight-bold">@products.Remark.Name</span>
                                        </div>
                                        <div class="col pr-0">
                                            @Html.ActionLink("Add To Cart", "Cart", "User", null, new { @class = "btn btn-primary", @id = "cart" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                </div>
            </div>

        </div>
        <hr />
        <div class="d-flex justify-content-center">
            @Html.ActionLink("Browse All", "AllProducts", "User", null, new { @class = "btn btn-outline-primary" })

        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Home/main.js"></script>
</body>
</html>
