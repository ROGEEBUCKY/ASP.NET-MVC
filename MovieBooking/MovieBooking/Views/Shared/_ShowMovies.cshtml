
<div class="container" style=" display: flex; justify-content: center; flex-wrap:wrap ">
    @foreach (var item in Model)
        {
        <a href="@Url.Action("MovieDetails", "Movie", new {id = item.id})">
            <div style="border:1px solid blue; width:300px; height:300px; background: url(@item.posterUrl); background-repeat:no-repeat; margin: 10px; display: flex;justify-content:flex-end; flex-direction:column">
                <div class="text-uppercase text-center" style="width:300px; color: white; font-size:2em; background:rgb(0,0,0,0.7)">@item.title</div>
            </div>
        </a>
        }
</div>