@model MovieBooking.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
}

<div class="container-fluid text-left" style="border: 1px solid blue;margin-top:10px;padding:10px">
    <div style="display:flex; justify-content:space-evenly">
        <div style="font-size:1.5em">
            <h2 class="text-primary" style="font-weight:800;font-size:2.2em">@Model.title</h2>
            <p class="text-info">
                <b>
                    Genre:
                </b>@foreach (var item in Model.genres)
                        {
                        <span>@item.ToString() </span>
                        }
            </p>
            <p class="text-info"><b>Actors:</b> @Model.actors</p>
            <p class="text-info"><b>Director:</b> @Model.director</p>
            <p class="text-info"><b>Year of Release:</b> @Model.year</p>
            <p class="text-info"><b>Runtime:</b> @Model.runtime</p>
        </div>
        <div style="width:250px; height:350px">
            <img src="@Model.posterUrl" style="width:100%; height:100%; border:1px solid red" alt="@Model.title" />
        </div>
    </div>
    <div style="padding:10px">
        <h3 class="text-primary" style="font-weight: 800">Summary:</h3>
        <p class="text-info" style="font-size:1.5em">@Model.plot</p>
    </div>
</div>



